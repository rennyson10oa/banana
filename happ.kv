#:kivy 2.2.1

<HomeWindow>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        Button:
            text: 'faça um registro'
            on_press: root.manager.current = 'register'
        Button:
            text: 'faça o login'
            on_press: root.manager.current = 'login'
        Button:
            text: 'Quit'
            on_press: stop()

<LoginWindow>
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        Label:
            id: TxtDoInicio
            text: 'essa é a tela de login'
            color:(0, 0, 0, 1)
        MDRectangleFlatButton:
            text: "Voltar para home"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_press: root.manager.current = 'home'

<RegisterWindow>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        Label:
            id: TxtDoInicio
            text: 'essa é a tela de registro'
            color:(0, 0, 0, 1)
        MDRectangleFlatButton:
            text: "Voltar para home"
            pos_hint: {"center_x": .5, "center_y": .5}
            on_press: root.manager.current = 'home'